  "reglas_asignacion": {
    "descripcion": "Sistema jerárquico de asignación de plantillas sin ambigüedades",
    
    "prioridad_1_seguridad": {
      "descripcion": "Primera validación - Seguridad y limitaciones físicas",
      "reglas": [
        {
          "condicion": "edad >= 60",
          "accion": {
            "calentamiento": "calentamiento_bajo_impacto",
            "cardio": ["cardio_senior_perdida_grasa", "cardio_senior_mantenimiento"]
          },
          "nota": "SIEMPRE priorizar sobre nivel declarado"
        },
        {
          "condicion": "lesion_hombro == true OR dolor_hombro == true",
          "accion": {
            "calentamiento": "calentamiento_hombros_especifico"
          },
          "nota": "Solo si es día de hombros o push"
        },
        {
          "condicion": "lesion_lumbar == true OR hernia_discal == true",
          "accion": {
            "calentamiento": "calentamiento_bajo_impacto",
            "core_abs": "abs_basico_1"
          },
          "nota": "Evitar ejercicios de flexión espinal intensa"
        },
        {
          "condicion": "muy_sedentario == true OR primera_sesion == true",
          "accion": {
            "calentamiento": "calentamiento_bajo_impacto",
            "core_abs": "abs_basico_1",
            "cardio": ["cardio_principiante_mantenimiento"]
          }
        }
      ]
    },

    "prioridad_2_especificidad": {
      "descripcion": "Segunda validación - Especificidad del entrenamiento del día",
      "reglas": [
        {
          "condicion": "grupos_musculares includes ['pecho', 'hombros', 'triceps']",
          "accion": {
            "calentamiento": "calentamiento_push_1"
          }
        },
        {
          "condicion": "grupos_musculares includes ['espalda', 'biceps', 'dorsales']",
          "accion": {
            "calentamiento": "calentamiento_pull_1"
          }
        },
        {
          "condicion": "grupos_musculares includes ['piernas', 'cuadriceps', 'gluteos', 'isquios']",
          "accion": {
            "calentamiento": "calentamiento_piernas_1"
          }
        },
        {
          "condicion": "tipo_sesion == 'fullbody'",
          "accion": {
            "calentamiento": "calentamiento_fullbody_1"
          }
        }
      ]
    },

    "prioridad_3_optimizacion": {
      "descripcion": "Tercera validación - Nivel y objetivo de entrenamiento",
      "reglas_core_abs": [
        {
          "condicion": "nivel == 'principiante'",
          "accion": {
            "core_abs": ["abs_basico_1"]
          },
          "rotacion": "Usar siempre el mismo circuito por 4 semanas"
        },
        {
          "condicion": "nivel == 'intermedio'",
          "accion": {
            "core_abs": ["abs_oblicuos_2", "abs_antirotacion_3"]
          },
          "rotacion": "Alternar cada semana"
        },
        {
          "condicion": "nivel == 'avanzado'",
          "accion": {
            "core_abs": ["abs_antirotacion_3", "abs_avanzado_4"]
          },
          "rotacion": "Alternar cada semana"
        },
        {
          "condicion": "objetivo == 'perdida_grasa' AND nivel != 'principiante'",
          "accion": {
            "core_abs": ["abs_quema_grasa_5"]
          },
          "frecuencia": "1-2 veces por semana, intercalar con otros circuitos"
        }
      ],

      "reglas_cardio": [
        {
          "condicion": "nivel == 'principiante' AND objetivo == 'perdida_grasa'",
          "accion": {
            "cardio": "cardio_principiante_perdida_grasa"
          }
        },
        {
          "condicion": "nivel == 'principiante' AND objetivo == 'mantenimiento'",
          "accion": {
            "cardio": "cardio_principiante_mantenimiento"
          }
        },
        {
          "condicion": "nivel == 'intermedio' AND objetivo == 'perdida_grasa'",
          "accion": {
            "cardio": "cardio_intermedio_perdida_grasa"
          }
        },
        {
          "condicion": "nivel == 'intermedio' AND objetivo == 'mantenimiento'",
          "accion": {
            "cardio": "cardio_intermedio_mantenimiento"
          }
        },
        {
          "condicion": "nivel == 'avanzado' AND objetivo == 'perdida_grasa'",
          "accion": {
            "cardio": "cardio_avanzado_perdida_grasa"
          }
        },
        {
          "condicion": "nivel == 'avanzado' AND objetivo == 'mantenimiento'",
          "accion": {
            "cardio": "cardio_avanzado_mantenimiento"
          }
        }
      ]
    },

    "sistema_rotacion": {
      "core_abs": {
        "metodo": "semanal",
        "descripcion": "Cambiar circuito cada semana dentro de los permitidos por nivel"
      },
      "cardio": {
        "metodo": "por_sesion",
        "descripcion": "Alternar entre opción 1 y opción 2 cada sesión de entrenamiento"
      }
    },

    "notas_implementacion": [
      "Evaluar SIEMPRE en orden: Prioridad 1 → Prioridad 2 → Prioridad 3",
      "Si una regla de Prioridad 1 aplica, PUEDE SOBRESCRIBIR las de Prioridad 2 y 3",
      "Si ninguna regla específica aplica, usar calentamiento general (push/pull según día)",
      "En caso de conflicto entre reglas del mismo nivel, la primera en la lista tiene preferencia",
      "El sistema debe loggear qué regla se aplicó para debugging"
    ]
  }
